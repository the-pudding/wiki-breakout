#graphic .graphic__legend
	position fixed
	bottom 0
	left 0
	padding-bottom 0.5em
	display flex
	justify-content center
	flex-direction row-reverse
	width 100%
	background-color $bg
	z-index set-index(top)
	opacity 0
	transition opacity 500ms ease-in-out
	&.is-visible
		opacity 1
	&:before
		position absolute
		display block
		content 'Pageviews'
		bottom 1.4rem
		background-color $bg
		left 50%
		width 100%
		text-align center
		padding 0.5em 0
		transform translateX(-50%)
		set-type-size(x-small, false)
		line-height 1rem
		opacity 1
		font-weight 600
		letter-spacing 0.05em
		text-transform uppercase
		color rgba($fg, 0.67)
		// border-top 1px solid lighten($bg, 5)
	li
		width 1rem
		height 1rem
		position relative
		&:first-of-type
			&:after
				position absolute
				display block
				content '10,000+'
				top 0
				left 1.5rem
				set-type-size(x-small, false)
				line-height 1rem
				opacity 0.67
				font-weight 600
		&:last-of-type
			&:before
				display block
				content '0'
				position absolute
				top 0
				right 1.5rem
				set-type-size(x-small, false)
				line-height 1rem
				opacity 0.67
				font-weight 600
				
			