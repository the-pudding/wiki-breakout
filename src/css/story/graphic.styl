#graphic
	position relative
	
	.graphic__people
		position absolute

	.person
		position absolute

		// SVG
		svg
			display block
			transition opacity 150ms ease-in-out
			opacity 0.1
		path.snake
			&--inner
				stroke none
			&--outer
				fill none
				stroke-width 2px
				stroke $gray
				stroke-linecap round
				stroke-linejoin round
				
		path.spine
			fill none
		
		.g-axis
			path
				display none
			line
				stroke-dasharray 2px 2px
				stroke $gray
				stroke-width 0.5px

		// INFO
		.info
			position absolute
			width 100%
			right 100%
			display flex
			align-items center
			cursor pointer
			p.name
				width 100%
				margin 0.5em
				set-type-size(medium, false)
				line-height 1.2
				order 0
				text-align right
				opacity 0
				text-shadow 0 0 5px $bg
				font-weight 600
				background-color rgba($bg, 0.75)
				border-radius 5px
				padding 0 0.25em

			.thumbnail
				min-width $thumb-size
				min-height $thumb-size
				background $bg
				border-radius 50%
				border 1px solid $bg
				background-color $gray
				background-repeat no-repeat
				background-size cover
				background-position 50% 0
				filter grayscale(100%)
				box-shadow 0 0 6px 3px $bg
				transform scale(0.5) translateY(-50%)
				transition transform 250ms ease-in-out

		&.is-hover
			p.name
				opacity 1
				transform translate($thumb-size * 0.25, $thumb-size * -0.25)
			.thumbnail
				filter grayscale(50%)
			svg
				opacity 1
		&.is-active
			p.name
				opacity 1
				transform translate(0,0)
			.thumbnail
				filter grayscale(50%)
				transform scale(1)
			svg
				opacity 1
		
		.track
			position absolute

	
	.graphic__nametag
		position fixed
		left 0
		top 50%
		margin-top 0
		z-index set-index(overlay)
		// transition margin-top 100ms
		li
			set-type-size(x-small, false)
			line-height 1
			padding 0.25em 0.5em
			opacity 0.5
			cursor pointer
			transition opacity 100ms ease-in-out
			color $red
			font-weight 400
			&.is-rising
				color $yellow
			&:hover
				opacity 1
			&.is-active
				opacity 1
				font-weight 600





.test
	z-index 10000
	width 100%
	height 20vh
	border-top 2px dotted black
	border-bottom 2px dotted black
	position fixed
	top 50%
	transform translateY(-50%)
	opacity 0.2
	pointer-events none