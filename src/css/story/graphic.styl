#graphic
	position relative
	
	.graphic__people
		position absolute

	.person
		position absolute

		// SVG
		svg
			display block
			transition opacity 150ms ease-in-out
			opacity 1
		text
			fill $fg
			font-family $sans
			font-size 12px
		path.snake
			&--inner
				stroke none
				fill lighten($bg, 4)
			&--outer
				fill none
				stroke-width 2px
				stroke darken($bg, 4)
				stroke-linecap round
				stroke-linejoin round
				
		path.spine
			fill none
		
		.g-axis
			path
				display none
			line
				stroke-dasharray 2px 2px
				stroke lighten($bg, 20)
				stroke-width 0.5px
			.axis--x
				.tick:nth-child(2)
					display none
			.axis--y
				.tick:nth-child(2),.tick:nth-child(11)
					display none

		// INFO
		.info
			position absolute
			width 100%
			right 100%
			display flex
			align-items center
			cursor pointer
			transform translateX(2rem)
			p.name
				width 100%
				margin 0.5em
				set-type-size(medium, false)
				line-height 1.2
				order 0
				text-align right
				opacity 0
				text-shadow 0 0 5px $bg
				font-weight 600
				background-color rgba($bg, 0.75)
				border-radius 5px
				padding 0 0.25em

			.thumbnail
				min-width $thumb-size
				min-height $thumb-size
				background $bg
				border-radius 50%
				border 1px solid $bg
				background-color $gray
				background-repeat no-repeat
				background-size cover
				background-position 50% 0
				filter grayscale(50%)
				box-shadow 0 0 6px 3px $bg
				transform scale(0.5) translate(50%, -50%)
				transition transform 250ms ease-in-out

		&.is-hover
			p.name
				opacity 1
				transform translate($thumb-size * 0.5, $thumb-size * -0.25)
			// .thumbnail
			// 	filter grayscale(50%)
			svg
				opacity 1
				.snake--inner
					fill url('#linear-gradient--inner')
				.snake--outer
					stroke url('#linear-gradient--outer')
		&.is-active
			p.name
				opacity 1
				transform translate(0,0)
			.thumbnail
				transition transform 250ms ease-in-out
				transform scale(1) translate(0, 0)
				box-shadow 0 0 3px 3px $fg
				border-color $fg
			svg
				opacity 1
				.snake--inner
					fill url('#linear-gradient--inner')
				.snake--outer
					stroke url('#linear-gradient--outer')
		
		.track
			position absolute

	
	.graphic__nametag
		position fixed
		right 0
		top 50%
		margin-top 0
		z-index set-index(overlay)
		// transition margin-top 100ms
		li
			set-type-size(x-small, false)
			line-height 1
			padding 0.25em 0.5em
			opacity 0.33
			cursor pointer
			transition opacity 100ms ease-in-out
			color $red
			font-weight 400
			text-align right
			&.is-rising
				color $yellow
			&:hover
				opacity 1
			&.is-active
				opacity 1
				font-weight 600




