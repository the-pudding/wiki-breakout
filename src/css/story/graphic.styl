#graphic
	position relative
	.graphic__svg
		.person
			opacity 0.1
			transition opacity 150ms ease-in-out
		path.snake
			&--inner
				stroke none
			&--outer
				fill none
				stroke-width 2px
				stroke $gray
				stroke-linecap round
				stroke-linejoin round
				
		path.spine
			fill none
		
		.g-axis
			path
				display none
			line
				stroke-dasharray 2px 2px
				stroke $gray
				stroke-width 0.5px
		

	.graphic__info
		position absolute
		.person
			position absolute
			display flex
			transform translate(-100%, 0.5rem)
			align-items center
			margin-left $thumb-size * 0.5
			cursor pointer
			// transition opacity 100ms ease-in-out
		p.name
			margin 0.5em
			set-type-size(x-large, false)
			line-height 1.2
			order 0
			text-align right

		.thumbnail
			min-width $thumb-size
			min-height $thumb-size
			background $gray-light
			border-radius 50%
			border 10px solid $gray
			background-repeat no-repeat
			background-size cover
			background-position 50% 0
			filter grayscale(50%)
		
		.overlay
			width 100%
			height 100%
			position absolute
			background white
		

		.track
			position absolute



.test
	z-index 10000
	width 100%
	height 20vh
	border-top 2px dotted black
	border-bottom 2px dotted black
	position fixed
	top 50%
	transform translateY(-50%)
	opacity 0.2
	pointer-events none