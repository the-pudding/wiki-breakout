.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__begin
		text-align center
		max-width 30rem
		margin 0 auto
		margin-top 3rem
		transition opacity 250ms ease-in-out
		&.is-hidden
			opacity 0
			pointer-events none
		p
			margin 0.5rem 0
		.btn
			border-radius 1rem
			background-color $yellow
			color $bg
			font-weight 600
			line-height 1
			padding 0.5em 1em
			set-type-size(small, false)
			transition all 200ms ease-in-out
			&.is-hidden
				opacity 0
			&:hover
				background-color $red
			&--text
				background-color transparent
				padding 0.5em 0
				border-radius 0
				border-bottom 1px solid $fg
				color $fg
				set-type-size(x-small, false)
				margin-top 0.5rem
				width 9rem
				margin 0.5rem auto
				&:hover
					background-color transparent
					color $red
					border-bottom 1px solid $red
			svg
				width 1.25em
				height 1.25em
				vertical-align middle
				transform translateY(-5%)

	&__hed
		max-width 35rem
		margin 0 auto
		padding-top 1.5rem
		font-family $mono
		font-weight 600
		text-align center
		color $fg
		word-spacing -0.1em
		set-type-size('large', true)
		+mq('bp-4')
			set-type-size('xxx-large', true)
	
	&__byline
		max-width $column-width
		margin 1rem auto
		text-align center
		set-type-size('x-small', true)
		+mq('bp-4')
			set-type-size('small', true)
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)
	
