#graphic .graphic__grid
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	pointer-events none
	z-index 10001
	opacity 0
	transition opacity 500ms ease-in-out
	&.is-visible
		opacity 1
	.grid
		position absolute
		display flex
		justify-content space-between
		width 100%
		p
			margin 0.5em 0
			set-type-size(x-small, false)
			line-height 1
			text-transform uppercase
			opacity 0.67
			font-weight 600
			letter-spacing 0.05em
			background-color rgba($bg, 0.9)
			padding 0 0.25em
			padding-top 0.25em
			svg
				width 1.5em
				height 1.5em
				vertical-align middle
				transform translateY(-12.5%)
	.grid__x
		bottom 0
		left 0
	.grid__y
		top 0
		left 0
		width 100vh
		transform-origin 0 0
		transform rotate(-90deg) translate(-100vh, 0)
		
	.y--top.is-tutorial
		animation pulse-y 1s ease-in-out
	.x--left.is-tutorial
		animation pulse-x 1s ease-in-out
	
@keyframes pulse-y
	0%
		opacity 0.67
	50%
		opacity 1
		transform translateY(100%)
	100%
		opacity 0.67


@keyframes pulse-x
	0%
		opacity 0.67
	50%
		opacity 1
		transform translateY(-100%)
	100%
		opacity 0.67

