#graphic .graphic__grid
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	.grid
		position absolute
		display flex
		justify-content space-between
		width 100%
		p
			margin 0.5em 0
			set-type-size(x-small, false)
			line-height 1
			text-transform uppercase
			opacity 0.67
			font-weight 600
			letter-spacing 0.05em
			svg
				width 1.5em
				height 1.5em
				vertical-align middle
				transform translateY(-12.5%)
	.grid__x
		bottom 0
		left 0
	.grid__y
		top 0
		left 0
		width 100vh
		transform-origin 0 0
		transform rotate(-90deg) translate(-100vh, 0)
		