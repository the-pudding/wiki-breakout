#graphic .graphic__tracks
	width 100%
	position relative
	opacity 1
	&.is-visible:after
		content ''
		display block
		width 100%
		height 100vh
		position fixed
		top 4rem
		left 0
		background $bg
		+mq('bp')
			display none
	.track
		padding-left 0.5rem
		top 0
		left 0
		position relative
		+mq('bp')
			padding-left 2rem
	.timer
		position sticky
		top 0
		left 0
		width 3rem
		height 3rem
		border-radius 50%
		border 1px solid $bg
		text-align center
		line-height 3rem
		margin 0
		padding 0
		font-family $mono
		background-color $yellow
		color $bg
		font-weight 600
		transform translateY(-50%)
		



